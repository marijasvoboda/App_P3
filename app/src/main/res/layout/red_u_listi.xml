<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="20dp">

            <TextView
                android:id="@+id/grad1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Grad:"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/grad1"/>

            <TextView
                android:id="@+id/grad"
                android:layout_width="wrap_content"
                android:layout_below="@+id/grad1"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:paddingBottom="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/drzava1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grad"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Država:"/>

            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/drzava1"
                android:layout_height="1dp"
                android:background="#000000" />
            <TextView
                android:id="@+id/drzava"
                android:layout_below="@id/drzava1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:textColor="#141414"
                android:textSize="13sp"
                />


            <TextView
                android:id="@+id/godina1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/drzava"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Godina putovanja:"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/godina1"/>

            <TextView
                android:id="@+id/godina"
                android:layout_below="@id/godina1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:textColor="#141414"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/biljeska1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/godina"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Bilješka:"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_below="@id/biljeska1"/>

            <TextView
                android:id="@+id/biljeska"
                android:layout_below="@id/biljeska1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:textColor="#141414"
                android:textSize="13sp"
                />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>

